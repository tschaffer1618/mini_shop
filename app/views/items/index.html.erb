<h1 class="primary-heading">All Items</h1>

<% @items.each do |item| %>
  <img class="img" src=<%= "#{item.image}" %>>
  <h2><%= item.name %></h2>
  <p><%= item.description %></p>
  <p>$<%= item.price %></p>
  <p><%= item.status %></p>
  <p>Number in stock: <%= item.inventory %></p>
  <h3>Merchant: <%= item.merchant.name %></h3>
  <br/>
  <br/>
<% end %>
