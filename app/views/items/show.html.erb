<img class="img" src=<%= "#{@item.image}" %>>
<h2><%= @item.name %></h2>
<p><%= @item.description %></p>
<p>Price: $<%= @item.price %></p>
<p>Item status: <%= @item.status %></p>
<p>Number in stock: <%= @item.inventory %></p>
<h3>Merchant: <%= link_to("#{@item.merchant.name}", "/merchants/#{@item.merchant.id}", class: "normal_link") %></h3>

<h3><%= link_to("Update Item", "/items/#{@item.id}/edit", class: "button_link") %></h3>
<h3><%= link_to("Delete Item", "/items/#{@item.id}", method: :delete, class: "button_link") %></h3>
